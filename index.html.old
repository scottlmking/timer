<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta charset="utf-8" />
        <title>Timer</title>
        <!-- <link rel="stylesheet" href="main.css" /> -->
    </head>
    <body>
        <div id="wrap">
            <header>
                <h1>Timer</h1>
            </header>

            <main>
                <form id="inputForm">
                    <label for="hoursInput">Hours: </label>
                    <input
                        id="hoursInput"
                        type="number"
                        min="0"
                        max="20"
                        step="1"
                        value="0"
                    />
                    <label for="minutesInput">Minutes: </label>
                    <input
                        id="minutesInput"
                        type="number"
                        min="0"
                        max="59"
                        step="1"
                        value="0"
                    />
                    <label for="secondsInput">Seconds: </label>
                    <input
                        id="secondsInput"
                        type="number"
                        min="0"
                        max="59"
                        step="1"
                        value="5"
                    />
                    <br /><br />
                    <input type="button" value="Start" id="startButton" />
                    <input
                        type="button"
                        value="Pause"
                        id="pauseButton"
                        disabled
                    />
                    <input
                        type="button"
                        value="Reset"
                        id="resetButton"
                        disabled
                    />
                </form>

                <div id="container">
                    <p id="timerDisplay"></p>
                    <p id="statusMessage"></p>
                </div>
            </main>
        </div>

        <script src="timer.js"></script>
    </body>
</html>
